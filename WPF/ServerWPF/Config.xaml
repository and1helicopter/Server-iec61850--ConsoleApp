<UserControl x:Class="ServerWPF.Config"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="350" Width="500">
    <Grid>
        <Button Content="OK" HorizontalAlignment="Left" Margin="329,320,0,0" VerticalAlignment="Top" Width="75" BorderBrush="#FFA4A4A4" Background="White"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="409,320,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.44,2.4" BorderBrush="#FFA4A4A4" Background="White"/>
        <TabControl HorizontalAlignment="Left" Height="305" VerticalAlignment="Top" Width="484" Margin="0,5,0,0">
            <TabItem Header="Server">
                <Grid Background="White">
                    <TextBox x:Name="PortTextBox" Height="23" Margin="0,10,70,0" TextWrapping="Wrap" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120"/>
                    <Label Content="Port:" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="Autostart" Margin="0,0,70,10" Height="15" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>
                    <TextBox x:Name="HostTextBox" Height="23" Margin="0,44,70,0" TextWrapping="Wrap" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120"/>
                    <Label Content="Host:" HorizontalAlignment="Left" Margin="35,41,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="ModBus">
                <Grid Background="White">
                    <Label Content="Baud Rate:" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="BaudRate:" HorizontalAlignment="Left" Margin="35,36,0,0" VerticalAlignment="Top"/>
                    <Label Content="BaudRate:" HorizontalAlignment="Left" Margin="35,62,0,0" VerticalAlignment="Top"/>
                    <Label Content="BaudRate:" HorizontalAlignment="Left" Margin="35,88,0,0" VerticalAlignment="Top"/>
                    <ComboBox x:Name="BaudRateComboBox" Margin="0,10,70,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120">
                        <ComboBoxItem Content="9600"/>
                        <ComboBoxItem Content="19200"/>
                        <ComboBoxItem Content="38400"/>
                        <ComboBoxItem Content="57600"/>
                        <ComboBoxItem Content="115200"/>
                        <ComboBoxItem Content="230400"/>
                    </ComboBox>
                </Grid>
            </TabItem>
            <TabItem Header="Scope">
                <Grid Background="White">
                    <TextBox   HorizontalAlignment="Left" Height="23" Margin="59,24,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Label" HorizontalAlignment="Left" Margin="16,21,0,0" VerticalAlignment="Top"/>
                    <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="304,193,0,0" VerticalAlignment="Top"/>
                    <ComboBox HorizontalAlignment="Left" Margin="336,21,0,0" VerticalAlignment="Top" Width="120"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
